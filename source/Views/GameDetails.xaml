<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"                    
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:markup="clr-namespace:Playnite.Extensions.Markup;assembly=Playnite"
                    mc:Ignorable="d">

    <Style TargetType="{x:Type GameDetails}">
        <Setter Property="Focusable" Value="False"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type GameDetails}">
                    <Grid>
                        <Border x:Name="MaskVerticalFadeTrailer" Tag="{DynamicResource Trailers}">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Background" Value="{DynamicResource TrailerVerticalFade}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ElementName=StopPlayButton,Path=IsChecked}" Value="True">
                                            <Setter Property="Background" Value="Transparent"/>
                                        </DataTrigger>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding ElementName=StopPlayButton, Path=IsChecked}" Value="True"/>
                                                <Condition Binding="{PluginSettings Plugin=ExtraMetadataLoader, Path=IsVideoPlaying, FallbackValue=True}" Value="False"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Background" Value="Transparent"/>
                                        </MultiDataTrigger>
                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="false">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{PluginSettings Plugin=ExtraMetadataLoader, Path=IsTrailerAvailable, FallbackValue=True}" Value="False">
                                            <Setter Property="Background" Value="Transparent"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <Border.CacheMode>
                                <BitmapCache RenderAtScale="0.75"/>
                            </Border.CacheMode>
                        </Border>
                        <Border x:Name="MaskSolidTrailer" Tag="{DynamicResource Trailers}">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ElementName=ZoomButton,Path=IsChecked}" Value="True">
                                            <Setter Property="Background" Value="Black"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="false">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <Border.CacheMode>
                                <BitmapCache RenderAtScale="1"/>
                            </Border.CacheMode>
                        </Border>

                        <Border x:Name="MaskVerticalFade" Background="{DynamicResource BackgroundVerticalFade}" Grid.RowSpan="3">
                            <Border.CacheMode>
                                <BitmapCache RenderAtScale="0.75"/>
                            </Border.CacheMode>
                        </Border>
                        <Border x:Name="MaskHorizontalFade" Background="{DynamicResource BackgroundHorizontalFade}" Grid.RowSpan="3">
                            <Border.CacheMode>
                                <BitmapCache RenderAtScale="0.75"/>
                            </Border.CacheMode>
                        </Border>
                        <Border x:Name="MaskSolid" Background="Black" Grid.RowSpan="3">
                            <Border.CacheMode>
                                <BitmapCache RenderAtScale="1"/>
                            </Border.CacheMode>
                        </Border>
                        <Border Background="{DynamicResource MainBackgourndBrush}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.RowSpan="3">
                            <Border.CacheMode>
                                <BitmapCache RenderAtScale="1"/>
                            </Border.CacheMode>
                        </Border>
                        <Border Background="Black" Opacity="0.5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.RowSpan="3">
                            <Border.CacheMode>
                                <BitmapCache RenderAtScale="0.01"/>
                            </Border.CacheMode>
                        </Border>
                        <Image Stretch="UniformToFill" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.RowSpan="3"
                                   Tag="{DynamicResource BackgroundBlur}"
                                   RenderOptions.BitmapScalingMode="LowQuality">
                            <Image.Style>
                                <Style TargetType="Image">
                                    <Setter Property="Source" Value="Blank.png"/>
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="true">
                                            <Setter Property="Source" Value="{Binding BackgroundImage, Converter={StaticResource ImageStringToImageConverter}}"/>
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Image.Style>
                            <Image.CacheMode>
                                <BitmapCache RenderAtScale="0.1"/>
                            </Image.CacheMode>
                            <Image.Effect>
                                <BlurEffect Radius="20" RenderingBias="Performance"/>
                            </Image.Effect>
                        </Image>
                        <Grid HorizontalAlignment="Center" VerticalAlignment="Top" Grid.RowSpan="3" Tag="{DynamicResource BackgroundStretchNew}">
                            <Grid.Style>
                                <Style TargetType="Grid">
                                    <Setter Property="OpacityMask">
                                        <Setter.Value>
                                            <VisualBrush Visual="{Binding ElementName=MaskHorizontalFade}"/>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ElementName=PART_ImageBackground, Path=ActualWidth}" Value="1920">
                                            <Setter Property="OpacityMask">
                                                <Setter.Value>
                                                    <VisualBrush Visual="{Binding ElementName=MaskSolid}"/>
                                                </Setter.Value>
                                            </Setter>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="false">
                                            <Setter Property="OpacityMask">
                                                <Setter.Value>
                                                    <VisualBrush Visual="{Binding ElementName=MaskSolid}"/>
                                                </Setter.Value>
                                            </Setter>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Grid.Style>
                            <Grid Tag="{DynamicResource BackgroundStretchNew}">
                                <Grid.Style>
                                    <Style TargetType="Grid">
                                        <Setter Property="OpacityMask">
                                            <Setter.Value>
                                                <VisualBrush Visual="{Binding ElementName=MaskVerticalFade}"/>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ElementName=PART_ImageBackground, Path=ActualHeight}" Value="1080">
                                                <Setter Property="OpacityMask">
                                                    <Setter.Value>
                                                        <VisualBrush Visual="{Binding ElementName=MaskSolid}"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="false">
                                                <Setter Property="OpacityMask">
                                                    <Setter.Value>
                                                        <VisualBrush Visual="{Binding ElementName=MaskSolid}"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Grid.Style>
                                <FadeImage HorizontalAlignment="Center" VerticalAlignment="Top" Grid.RowSpan="3"                                 
                                   x:Name="PART_ImageBackground" Tag="{DynamicResource BackgroundStretchNew}">
                                    <FadeImage.Style>
                                        <Style TargetType="FadeImage">
                                            <Setter Property="Stretch" Value="Uniform"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="false">
                                                    <Setter Property="Stretch" Value="UniformToFill"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </FadeImage.Style>
                                </FadeImage>
                            </Grid>
                        </Grid>

                        <Border Background="{DynamicResource GameDetailsVerticalFade}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>

                        <!--TRAILER-->
                        <Grid x:Name="Trailer" Tag="{DynamicResource Trailers}">
                            <Grid.Style>
                                <Style TargetType="Grid">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="false">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Grid.Style>
                            <ContentControl x:Name="ExtraMetadataLoader_VideoLoaderControl_NoControls_Sound">
                                <ContentControl.Style>
                                    <Style TargetType="ContentControl">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Setter Property="Opacity" Value="0"/>
                                        <Setter Property="OpacityMask">
                                            <Setter.Value>
                                                <VisualBrush Visual="{Binding ElementName=MaskVerticalFadeTrailer}"/>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ElementName=MainContent, Path=IsKeyboardFocusWithin}" Value="True">
                                                <Setter Property="Visibility" Value="Visible"/>
                                                <DataTrigger.EnterActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.2"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </DataTrigger.EnterActions>
                                                <DataTrigger.ExitActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="1" To="0" Duration="0:0:0.2"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </DataTrigger.ExitActions>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding ElementName=StopPlayButton,Path=IsChecked}" Value="True">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding ElementName=ZoomButton,Path=IsChecked}" Value="True">
                                                <Setter Property="OpacityMask">
                                                    <Setter.Value>
                                                        <VisualBrush Visual="{Binding ElementName=MaskSolidTrailer}"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </ContentControl.Style>
                            </ContentControl>
                            <Border Background="Black">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Opacity" Value="0"/>
                                        <Setter Property="OpacityMask">
                                            <Setter.Value>
                                                <VisualBrush Visual="{Binding ElementName=MaskVerticalFadeTrailer}"/>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ElementName=MainContent, Path=IsKeyboardFocusWithin}" Value="True">
                                                <DataTrigger.EnterActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="0.5" Duration="0:0:0.2"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </DataTrigger.EnterActions>
                                                <DataTrigger.ExitActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0.5" To="0" Duration="0:0:0.2"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </DataTrigger.ExitActions>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding ElementName=ZoomButton,Path=IsChecked}" Value="True">
                                                <DataTrigger.EnterActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0.5" To="0" Duration="0:0:0.2"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </DataTrigger.EnterActions>
                                                <DataTrigger.ExitActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="0.5" Duration="0:0:0.2"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </DataTrigger.ExitActions>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding ElementName=StopPlayButton,Path=IsChecked}" Value="True">
                                                <Setter Property="Opacity" Value="0"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                            </Border>
                        </Grid>

                        <!--MAIN CONTENT-->
                        <Grid x:Name="MainContent">
                            <Grid.Style>
                                <Style TargetType="Grid">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ElementName=PART_ElemGameDetails, Path=Visibility}" Value="Visible">
                                            <DataTrigger.EnterActions>
                                                <BeginStoryboard x:Name="Enter">
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetProperty="Opacity" Duration="0:0:0.4" From="0" To="1"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </DataTrigger.EnterActions>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Grid.Style>
                            <Grid Background="Transparent"
                          x:Name="PART_ViewHost"
                          d:DesignWidth="{StaticResource DesignWidth}"
                          d:DesignHeight="{StaticResource DesignHeight}"
                          d:DataContext="{x:Static DesignMainViewModel.DesignSelectedGameIntance}"
                          KeyboardNavigation.DirectionalNavigation="Contained"
                          KeyboardNavigation.TabNavigation="Contained">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="110" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="0" />
                                        <ColumnDefinition Width="50" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="280" />
                                        <RowDefinition Height="250" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>

                                    <DockPanel Grid.Column="1" Grid.Row="2" HorizontalAlignment="Left">
                                        <DockPanel.Style>
                                            <Style>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ElementName=ZoomButton, Path=IsChecked}" Value="True">
                                                        <Setter Property="ItemsControl.Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding ElementName=ExtraMetadataLoader_VideoLoaderControl_NoControls_Sound, Path=IsKeyboardFocusWithin}" Value="True">
                                                        <Setter Property="ItemsControl.Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </DockPanel.Style>
                                        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,20,0,20">
                                            <ButtonEx x:Name="PART_ButtonContext" Style="{DynamicResource ButtonGameDetails}"
                                          Margin="0,0,0,0" BorderThickness="2" MinWidth="220" Height="60" HorizontalContentAlignment="Center" Background="{DynamicResource ControlButtonBrush}">
                                            </ButtonEx>
                                            <ButtonEx x:Name="PART_ButtonOptions" Style="{DynamicResource ButtonGameDetails}"
                                          Content="{DynamicResource LOCGameOptions}"
                                          Margin="20,0,0,0" BorderThickness="2" MinWidth="220" Height="60" HorizontalContentAlignment="Center" Background="{DynamicResource ControlButtonBrush}">
                                            </ButtonEx>
                                        </StackPanel>

                                        <Border Margin="-10,20,0,20" DockPanel.Dock="Left" VerticalAlignment="Stretch" Width="850">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <!--Setter Property="Background" Value="#80303030" /-->
                                                    <Setter Property="BorderBrush" Value="Transparent" />
                                                    <Setter Property="BorderThickness" Value="2" />
                                                    <Setter Property="CornerRadius" Value="5" />
                                                    <Style.Triggers>
                                                        <Trigger Property="IsKeyboardFocusWithin" Value="True">
                                                            <Setter Property="BorderBrush" Value="{DynamicResource SelectionBrush}" />
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <ScrollViewerEx VerticalAlignment="Top" Tag="{DynamicResource DropShadows}">
                                                <ScrollViewerEx.Style>
                                                    <Style TargetType="ScrollViewerEx">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="true">
                                                                <Setter Property="Effect">
                                                                    <Setter.Value>
                                                                        <DropShadowEffect BlurRadius="5" />
                                                                    </Setter.Value>
                                                                </Setter>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </ScrollViewerEx.Style>
                                                <HtmlTextView x:Name="PART_HtmlDescription"  Margin="10"
                                                HtmlFontSize="{DynamicResource FontSizeSmall}" HtmlFontFamily="Segoe UI Light"
                                                HtmlForeground="{DynamicResource TextColor}"
                                                LinkForeground="{DynamicResource GlyphColor}"
                                                FocusVisualStyle="{x:Null}" />
                                            </ScrollViewerEx>
                                        </Border>

                                        <Grid Margin="10,20,0,20" DockPanel.Dock="Right">
                                            <Border HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <!--Setter Property="Background" Value="#80303030" /-->
                                                        <Setter Property="BorderBrush" Value="Transparent" />
                                                        <Setter Property="BorderThickness" Value="2" />
                                                        <Setter Property="CornerRadius" Value="5" />
                                                        <Style.Triggers>
                                                            <Trigger Property="IsKeyboardFocusWithin" Value="True">
                                                                <Setter Property="BorderBrush" Value="{DynamicResource SelectionBrush}" />
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <ScrollViewerEx Focusable="True" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10" Tag="{DynamicResource DropShadows}">
                                                    <ScrollViewerEx.Style>
                                                        <Style TargetType="ScrollViewerEx">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="true">
                                                                    <Setter Property="Effect">
                                                                        <Setter.Value>
                                                                            <DropShadowEffect BlurRadius="5" />
                                                                        </Setter.Value>
                                                                    </Setter>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </ScrollViewerEx.Style>
                                                    <StackPanel Orientation="Horizontal" Focusable="True" FocusVisualStyle="{x:Null}">
                                                        <StackPanel>

                                                            <StackPanel VerticalAlignment="Top" Orientation="Horizontal" Margin="0,0,0,10">
                                                                <Grid  Margin="0,0,0,0">
                                                                    <StackPanel Orientation="Horizontal" Width="420">
                                                                        <StackPanel>
                                                                            <StackPanel Margin="0,0,0,10">
                                                                                <TextBlock Style="{DynamicResource TextBlockBaseStyle}"
                                                                               Text="{DynamicResource LOCTimePlayed}"
                                                                               Margin="0,0,0,1" />
                                                                                <TextBlock Style="{DynamicResource TextBlockBaseStyle}" FontSize="20"
                                                                               Text="{Binding Playtime, Converter={StaticResource PlayTimeToStringConverter}}" />
                                                                            </StackPanel>

                                                                            <StackPanel Margin="0,0,0,0">
                                                                                <TextBlock Style="{DynamicResource TextBlockBaseStyle}"
                                                                               Text="{DynamicResource LOCCompletionStatus}"
                                                                               Margin="0,0,0,1" />
                                                                                <TextBlock Style="{DynamicResource TextBlockBaseStyle}" FontSize="20"
                                                                               Text="{Binding CompletionStatus}" />
                                                                            </StackPanel>
                                                                        </StackPanel>
                                                                    </StackPanel>

                                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,10,0">
                                                                        <StackPanel>
                                                                            <StackPanel Margin="0,0,0,10" HorizontalAlignment="Right">
                                                                                <TextBlock Style="{DynamicResource TextBlockBaseStyle}"
                                                                               Text="{DynamicResource LOCGameLastActivityTitle}"
                                                                               Margin="0,0,0,1" HorizontalAlignment="Right"/>
                                                                                <TextBlock Style="{DynamicResource TextBlockBaseStyle}" FontSize="20"
                                                                               Text="{Binding LastActivity, Converter={StaticResource DateTimeToLastPlayedConverter}}" HorizontalAlignment="Right" />
                                                                            </StackPanel>

                                                                            <StackPanel Margin="0,0,0,0" HorizontalAlignment="Right">
                                                                                <TextBlock Style="{DynamicResource TextBlockBaseStyle}"
                                                                               Text="{DynamicResource LOCGameReleaseDateTitle}"
                                                                               Margin="0,0,0,1" HorizontalAlignment="Right"/>
                                                                                <TextBlock Style="{DynamicResource TextBlockBaseStyle}" FontSize="20"
                                                                               Text="{Binding ReleaseDate}" HorizontalAlignment="Right" />
                                                                            </StackPanel>
                                                                        </StackPanel>
                                                                    </StackPanel>
                                                                </Grid>
                                                            </StackPanel>

                                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                                                <Grid  Margin="0,0,0,0">
                                                                    <StackPanel Orientation="Horizontal" Width="420">
                                                                        <StackPanel>
                                                                            <StackPanel Margin="0,0,0,10" >
                                                                                <TextBlock Style="{DynamicResource TextBlockBaseStyle}"
                                                                               Text="{DynamicResource LOCLibrary}"
                                                                               Margin="0,0,0,1" />
                                                                                <TextBlock Style="{DynamicResource TextBlockBaseStyle}" FontSize="20"
                                                                               Text="{Binding Library}"
                                                                               TextTrimming="CharacterEllipsis"/>
                                                                            </StackPanel>
                                                                        </StackPanel>
                                                                    </StackPanel>

                                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,10,0">
                                                                        <StackPanel>
                                                                            <StackPanel Margin="0,0,0,10" HorizontalAlignment="Right">
                                                                                <TextBlock Style="{DynamicResource TextBlockBaseStyle}"
                                                                               Text="{DynamicResource LOCCriticScore}"
                                                                               Margin="0,0,0,1" HorizontalAlignment="Right"/>
                                                                                <TextBlock Style="{DynamicResource TextBlockBaseStyle}" FontSize="20"
                                                                               Text="{Binding CriticScore}" HorizontalAlignment="Right"/>
                                                                            </StackPanel>
                                                                        </StackPanel>
                                                                    </StackPanel>
                                                                </Grid>
                                                            </StackPanel>
                                                            
                                                            <StackPanel Orientation="Horizontal">
                                                                <Grid x:Name="GRIDSuccessStory" HorizontalAlignment="Center" VerticalAlignment="Top" Tag="{PluginSettings Plugin=SuccessStory, Path=HasData}">
                                                                    <Grid.Style>
                                                                        <Style>
                                                                            <Setter Property="Control.Visibility" Value="Collapsed" />
                                                                            <Style.Triggers>
                                                                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="True">
                                                                                    <Setter Property="Control.Visibility" Value="Visible" />
                                                                                </DataTrigger>
                                                                            </Style.Triggers>
                                                                        </Style>
                                                                    </Grid.Style>
                                                                    <StackPanel Width="150" Margin="0,0,0,0" Orientation="Vertical">
                                                                        <StackPanel Margin="0,0,0,0">
                                                                            <TextBlock Style="{DynamicResource ProgressLabel}" Foreground="#FFEBEBEB">
                                                                            </TextBlock>
                                                                            <StackPanel HorizontalAlignment="Left" Orientation="Horizontal" >
                                                                                <TextBlock Style="{DynamicResource TextBlockBaseStyle}" Text="{PluginSettings Plugin=SuccessStory, Path=Percent}" >
                                                                                </TextBlock>

                                                                                <TextBlock Style="{DynamicResource TextBlockBaseStyle}" Text="%" >
                                                                                </TextBlock>
                                                                            </StackPanel>

                                                                            <Grid HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="0,5,0,0">
                                                                                <Grid.RenderTransform>
                                                                                    <ScaleTransform ScaleX="1.5" ScaleY="2"/>
                                                                                </Grid.RenderTransform>
                                                                                <Border Height="2.5" Width="100" Background="White" CornerRadius="2.5"/>
                                                                                <Border Height="2.5" Width="{PluginSettings Plugin=SuccessStory, Path=Percent}" Background="{DynamicResource UIBrush}" CornerRadius="2.5" Margin="0" HorizontalAlignment="Left"/>
                                                                            </Grid>
                                                                        </StackPanel>

                                                                        <StackPanel Margin="0,10,0,0" HorizontalAlignment="Left">
                                                                            <TextBlock Style="{DynamicResource EarnedLabel}" Foreground="#FFEBEBEB" HorizontalAlignment="Left">
                                                                            </TextBlock>
                                                                            <StackPanel HorizontalAlignment="Left" Orientation="Horizontal" >
                                                                                <TextBlock Style="{DynamicResource TextBlockBaseStyle}" Text="{PluginSettings Plugin=SuccessStory, Path=Unlocked}" HorizontalAlignment="Left">
                                                                                </TextBlock>

                                                                                <TextBlock Style="{DynamicResource TextBlockBaseStyle}" Text="/" HorizontalAlignment="Left">
                                                                                </TextBlock>

                                                                                <TextBlock Style="{DynamicResource TextBlockBaseStyle}" Text="{PluginSettings Plugin=SuccessStory, Path=Total}" HorizontalAlignment="Left">
                                                                                </TextBlock>
                                                                            </StackPanel>

                                                                            <Grid HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="0,5,0,0">
                                                                                <Grid.RenderTransform>
                                                                                    <ScaleTransform ScaleX="1.5" ScaleY="2"/>
                                                                                </Grid.RenderTransform>
                                                                                <Border Height="2.5" Width="100" Background="White" CornerRadius="2.5"/>
                                                                                <Border Height="2.5" Width="{PluginSettings Plugin=SuccessStory, Path=Percent}" Background="{DynamicResource UIBrush}" CornerRadius="2.5" Margin="0" HorizontalAlignment="Left"/>
                                                                            </Grid>
                                                                        </StackPanel>
                                                                    </StackPanel>
                                                                </Grid>

                                                                <Line HorizontalAlignment="Center" Stroke="{DynamicResource SelectionLightBrush}" StrokeThickness="2" Y1="150" Margin="20,0,20,0"
                                                      Tag="{PluginSettings Plugin=HowLongToBeat, Path=HasData}">
                                                                    <Line.Style>
                                                                        <Style TargetType="Line">
                                                                            <Setter Property="Visibility" Value="Visible" />
                                                                            <Style.Triggers>
                                                                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="{x:Null}">
                                                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                                                </DataTrigger>
                                                                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="False">
                                                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                                                </DataTrigger>
                                                                                <DataTrigger Binding="{Binding ElementName=GRIDSuccessStory, Path=Visibility}" Value="Collapsed">
                                                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                                                </DataTrigger>
                                                                            </Style.Triggers>
                                                                        </Style>
                                                                    </Line.Style>
                                                                </Line>

                                                                <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,0,0" >
                                                                    <StackPanel x:Name="SideBarHLTB" Margin="0,0,0,0" Tag="{PluginSettings Plugin=HowLongToBeat, Path=HasData}">
                                                                        <StackPanel.Style>
                                                                            <Style>
                                                                                <Setter Property="Control.Visibility" Value="Visible" />
                                                                                <Style.Triggers>
                                                                                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="{x:Null}">
                                                                                        <Setter Property="Control.Visibility" Value="Collapsed" />
                                                                                    </DataTrigger>
